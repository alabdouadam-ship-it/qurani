      {
        "number": 3471,
        "text": "These are the verses of the sagacious Book,",
        "surah": {
          "number": 31,
          "name": "سُورَةُ لُقۡمَانَ",
          "englishName": "Luqman",
          "englishNameTranslation": "Luqman",
          "revelationType": "Meccan",
          "numberOfAyahs": 34
        },
        "numberInSurah": 2,
