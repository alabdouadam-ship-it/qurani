    "ayahs": [
      {
        "number": 2494,
        "text": "وكثير من القرى كان أهلها ظالمين بكفرهم بما جاءتهم به رسلهم، فأهلكناهم بعذاب أبادهم جميعًا، وأوجدنا بعدهم قومًا آخرين سواهم.",
        "surah": {
          "number": 21,
          "name": "سُورَةُ الأَنبِيَاءِ",
          "englishName": "Al-Anbiyaa",
          "englishNameTranslation": "The Prophets",
          "revelationType": "Meccan",
