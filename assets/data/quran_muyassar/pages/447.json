    "ayahs": [
      {
        "number": 3813,
        "text": "ويقال لهم توبيخًا: ما لكم لا ينصر بعضكم بعضًا؟",
        "surah": {
          "number": 37,
          "name": "سُورَةُ الصَّافَّاتِ",
          "englishName": "As-Saaffaat",
          "englishNameTranslation": "Those drawn up in Ranks",
          "revelationType": "Meccan",
          "numberOfAyahs": 182
        },
        "numberInSurah": 25,
        "juz": 23,
