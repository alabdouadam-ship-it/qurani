        "hizbQuarter": 179,
        "sajda": false
      },
      {
        "number": 3832,
        "text": "ومن كرامتهم عند ربهم وإكرام بعضهم بعضًا أنهم على سرر متقابلين فيما بينهم.",
        "surah": {
          "number": 37,
          "name": "سُورَةُ الصَّافَّاتِ",
          "englishName": "As-Saaffaat",
          "englishNameTranslation": "Those drawn up in Ranks",
          "revelationType": "Meccan",
          "numberOfAyahs": 182
        },
        "numberInSurah": 44,
        "juz": 23,
