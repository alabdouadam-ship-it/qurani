        "hizbQuarter": 124,
        "sajda": false
      },
      {
        "number": 2331,
        "text": "واتخذ المشركون آلهة يعبدونها من دون الله؛ لتنصرهم، ويعتزوا بها.",
        "surah": {
          "number": 19,
          "name": "سُورَةُ مَرۡيَمَ",
          "englishName": "Maryam",
          "englishNameTranslation": "Mary",
          "revelationType": "Meccan",
          "numberOfAyahs": 98
        },
        "numberInSurah": 81,
        "juz": 16,
