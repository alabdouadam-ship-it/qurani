        "hizbQuarter": 124,
        "sajda": false
      },
      {
        "number": 2333,
        "text": "ألم تر - أيها الرسول - أنَّا سلَّطْنا الشياطين على الكافرين بالله ورسله؛ لتغويهم، وتدفعهم عن الطاعة إلى المعصية؟",
        "surah": {
          "number": 19,
          "name": "سُورَةُ مَرۡيَمَ",
          "englishName": "Maryam",
          "englishNameTranslation": "Mary",
          "revelationType": "Meccan",
          "numberOfAyahs": 98
        },
        "numberInSurah": 83,
        "juz": 16,
        "manzil": 4,
        "page": 311,
