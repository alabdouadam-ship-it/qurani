        "hizbQuarter": 117,
        "sajda": false
      },
      {
        "number": 2151,
        "text": "فألقينا عليهم النوم العميق، فبقوا في الكهف سنين كثيرة.",
        "surah": {
          "number": 18,
          "name": "سُورَةُ الكَهۡفِ",
          "englishName": "Al-Kahf",
          "englishNameTranslation": "The Cave",
          "revelationType": "Meccan",
