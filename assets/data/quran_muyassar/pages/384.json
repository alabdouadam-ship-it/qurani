        "sajda": false
      },
      {
        "number": 3238,
        "text": "فاعتمد -أيها الرسول- في كل أمورك على الله، وثق به؛ فإنه كافيك، إنك على الحق الواضح الذي لا شك فيه.",
        "surah": {
          "number": 27,
          "name": "سُورَةُ النَّمۡلِ",
          "englishName": "An-Naml",
          "englishNameTranslation": "The Ant",
          "revelationType": "Meccan",
          "numberOfAyahs": 93
        },
        "numberInSurah": 79,
        "juz": 20,
        "manzil": 5,
        "page": 384,
