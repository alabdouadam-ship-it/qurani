        "hizbQuarter": 179,
        "sajda": false
      },
      {
        "number": 3869,
        "text": "إن نوحًا من عبادنا المصدقين المخلصين العاملين بأوامر الله.",
        "surah": {
          "number": 37,
          "name": "سُورَةُ الصَّافَّاتِ",
