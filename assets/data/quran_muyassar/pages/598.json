    "ayahs": [
      {
        "number": 6126,
        "text": "إنا أنزلنا القرآن في ليلة الشرف والفضل، وهي إحدى ليالي شهر رمضان.",
        "surah": {
          "number": 97,
          "name": "سُورَةُ القَدۡرِ",
          "englishName": "Al-Qadr",
          "englishNameTranslation": "The Power, Fate",
          "revelationType": "Meccan",
          "numberOfAyahs": 5
        },
        "numberInSurah": 1,
        "juz": 30,
