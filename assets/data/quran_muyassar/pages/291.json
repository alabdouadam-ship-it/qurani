        "hizbQuarter": 116,
        "sajda": false
      },
      {
        "number": 2120,
        "text": "أو تكون لك حديقة فيها أنواع النخيل والأعناب، وتجعل الأنهار تجري في وسطها بغزارة.",
        "surah": {
          "number": 17,
          "name": "سُورَةُ الإِسۡرَاءِ",
          "englishName": "Al-Israa",
          "englishNameTranslation": "The Night Journey",
          "revelationType": "Meccan",
          "numberOfAyahs": 111
        },
        "numberInSurah": 91,
        "juz": 15,
