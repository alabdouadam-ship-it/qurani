    "ayahs": [
      {
        "number": 955,
        "text": "سبق الكلام على الحروف المقطَّعة في أول سورة البقرة.",
        "surah": {
          "number": 7,
          "name": "سُورَةُ الأَعۡرَافِ",
          "englishName": "Al-A'raaf",
          "englishNameTranslation": "The Heights",
          "revelationType": "Meccan",
          "numberOfAyahs": 206
        },
        "numberInSurah": 1,
        "juz": 8,
        "manzil": 2,
        "page": 151,
