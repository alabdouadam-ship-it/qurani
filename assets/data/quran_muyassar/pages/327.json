        "hizbQuarter": 131,
        "sajda": false
      },
      {
        "number": 2543,
        "text": "قال مَن سمع إبراهيم يحلف بأنه سيكيد أصنامهم: سمعنا فتى يقال له إبراهيم، يذكر الأصنام بسوء.",
        "surah": {
          "number": 21,
          "name": "سُورَةُ الأَنبِيَاءِ",
          "englishName": "Al-Anbiyaa",
          "englishNameTranslation": "The Prophets",
          "revelationType": "Meccan",
          "numberOfAyahs": 112
        },
        "numberInSurah": 60,
