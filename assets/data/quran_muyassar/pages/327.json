    "ayahs": [
      {
        "number": 2541,
        "text": "فحطم إبراهيم الأصنام وجعلها قطعًا صغيرة، وترك كبيرها؛ كي يرجع القوم إليه ويسألوه، فيتبين عجزهم وضلالهم، وتقوم الحجة عليهم.",
        "surah": {
          "number": 21,
          "name": "سُورَةُ الأَنبِيَاءِ",
          "englishName": "Al-Anbiyaa",
          "englishNameTranslation": "The Prophets",
          "revelationType": "Meccan",
